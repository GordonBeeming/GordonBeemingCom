@model ImageContentBlockContext
@inject IUrlHelper url
@{
    Layout = null;
}

<img class="lazyload" data-src='@(Model.ImageUrl)' alt='@(Model.AltText)' title='@(Model.AltText)' @Html.Raw(Model.HeightDisplayTag) @Html.Raw(Model.WidthDisplayTag) />
@if (Model.Figure.Length > 0)
{
  <br />
  <strong>Figure: @(Model.Figure)</strong>
}