@model LandingPageViewModel
@{
  Layout = "_Layout";
  ViewData["Title"] = "Profile";
  ViewData["HideHomeLogo"] = true;
}

@section Head {
  <link rel="canonical" href="@(ProductionUrl)" />
}

<partial name="_HomeHeader" />
<!-- Main Content-->
<main class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-10 col-xl-10">
        <div class="profile-row row gx-4 gx-lg-5 justify-content-center">
          <div class="profile-right col-md-12 col-lg-12 col-xl-12">
            <partial name="_Bio" />

            <h2>Recent Blog Posts</h2>
            <div class="recent-blog-posts">
              @foreach (var post in Model.RecentPosts)
              {
                <p>
                  <a asp-area="@(BlogArea)" asp-controller="ViewPost" asp-action="Index" asp-route-slug="@(post.Slug)">@(post.Title)</a>
                  @if (post.Tags.Count > 0)
                  {
                    <br>
                    foreach (var tag in post.Tags)
                    {
                      <text>@(tag.Name)</text>
                      @if (tag != post.Tags.Last())
                      {
                        <text>, </text>
                      }
                    }
                  }
                </p>
              }
              <p>
                👀 <a asp-area="@(BlogArea)" asp-controller="Home" asp-action="Index">View more posts...</a>
              </p>
            </div>

            <h2>Books</h2>
            <div class="books">
                  <a title="Managing Agile Open-Source Software Projects with Visual Studio Online" href="https://www.microsoftpressstore.com/store/managing-agile-open-source-software-projects-with-visual-9781509300648">
                    <img src="images/book-03.png" alt="Managing Agile Open-Source Software Projects with Visual Studio Online" border="0" />
                  </a>
                  <a title="Team Foundation Server 2015 Customization" href="https://www.amazon.com/Team-Foundation-Server-2015-Customization-ebook/dp/B014JH154E/ref=sr_1_1?dchild=1&qid=1601298839&refinements=p_27%3AGordon+Beeming&s=digital-text&sr=1-1&text=Gordon+Beeming">
                    <img src="images/book-02.png" alt="Team Foundation Server 2015 Customization" border="0" />
                  </a>
                  <a title="Team Foundation Server 2013 Customization" href="https://www.amazon.com/Team-Foundation-Server-2013-Customization/dp/1782177140/ref=sr_1_2?dchild=1&qid=1601298839&refinements=p_27%3AGordon+Beeming&s=digital-text&sr=1-2&text=Gordon+Beeming">
                    <img src="images/book-01.png" alt="Team Foundation Server 2013 Customization" border="0" />
                  </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>